<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <br>
<h2>Forgot your password?</h2>
<br>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { 
                  autocomplete: "email",
                  class: "input",
                  placeholder: "Email"
                },
                wrapper: false
                %>
  </div>

<br>
  <div class="field">
    <%= f.button :submit, "Send me reset password instructions", class: "button" %>
  </div>
<% end %>

      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
