<% content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Browse the latest instruments on Flanger
      </h1>
    </div>
  </div>
</section>
<% end %>

<br>
<br>

<div class="columns">
   <% @instruments.each do |item| %>
    <div class="column is-3">
      <div class="card">
        <div class="card-image">
          <%= link_to image_tag(item.image_url(:thumb)), item, class: "image" %>
        </div>
        <div class="card-content">
         
        <div class="content">
            <%= item.description %> | <%=  number_to_currency (item.price) %>
        </div>
      
        
        </div>
        <footer class="card-footer">
          <%= link_to 'Edit', edit_instrument_path(item), class:"card-footer-item" %>
          <%= link_to 'Delete', item, method: :delete, data: { confirm: "Are you sure?" }, class: "card-footer-item" %>
        </footer>
      </div>
    </div>
   <% end %>
</div>
